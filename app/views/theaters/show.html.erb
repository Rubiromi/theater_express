<h1>Theaters you just inputted should be here</h1>

<ul>
  <% @plays.each do |play| %>

    <li>
      <%= play.title %> <br>
      <%= play.theater %> <br>
      <%= play.time %> <br>
      <%= number_to_currency(play.price) %> <br>
      <%= link_to "Edit", edit_theater_path(@theater, play) %> &#124;
      <%= link_to "Delete", theater_play_path(@theater, play), method: :delete, "data-confirm" => "Are you sure?" %>
    </li>

  <% end %>
</ul>
<% end %>
<%= link_to "<<Back to Main", theaters_path %>
<%= link_to "Add Play", new_theater_play_path(@theater) %>
